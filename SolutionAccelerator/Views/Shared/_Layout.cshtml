<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Oceanic Airlines</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">

                <div class="col-md-4">
                    <div class="navbar-collapse collapse">
                        <img src="DKCESOA/SolutionAccelerator/Resources/images/Oceanic.svg" class="img-responsive" style="height: 100px; margin-top: 5px; margin-bottom:5px" />
                    </div>
                </div>
                <div class="col-md-4">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Route Calculator", "", "", new { area = "" }, new { @class = "navbar-brand" })</li>
                        @*<li>@Html.ActionLink("All Bookings", "", "")</li>*@
                        @*<li><a href="/DataServices/CourseService.svc">Data Service Example</a></li>*@
                        <li>@Html.ActionLink("All Bookings", "Contact", new { area = "" }, new { @class = "navbar-brand" })</li>
                    </ul>
                </div>
            </div>
        </div>
            </div>
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Oceanic Airlines</p>
                </footer>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
